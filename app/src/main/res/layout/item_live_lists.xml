<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/selector_default_white_gray"
    android:gravity="center"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_live_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/iv_live_cover"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/rd_def_rect_padding_big" />

        <com.xr.ruidementality.widget.TextViewWithBg
            android:id="@+id/tv_live_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:minWidth="30dp"
            android:padding="1dp"
            android:text="预告"
            android:textColor="#fff"
            android:textSize="10sp"
            app:tv_bg_color="#44000000"
            app:tv_corner_radius="3dp" />
    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_live_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="10"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:singleLine="true"
            android:text="Lilian 聊心理学"
            android:textColor="@color/h2_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_live_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_ruidian"
            android:ellipsize="end"
            android:paddingBottom="6dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="主播: jerry"
            android:textColor="@color/color96"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_live_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="12"
            android:paddingBottom="6dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="8/11 19:00"
            android:textColor="@color/color96"
            android:textSize="12sp" />

        <com.xr.ruidementality.widget.TextViewWithBg
            android:id="@+id/tv_ruidian"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/default_color_theme"
            android:textSize="10sp"
            app:tv_bg_color="@android:color/transparent"
            app:tv_bg_stroke_color="@color/default_color_theme"
            app:tv_corner_radius="5dp"
            app:tv_stroke_width="1dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color_E9" />
    </RelativeLayout>


</LinearLayout>
