<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white_corner10"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="确认购买"
            android:textColor="#555"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:id="@+id/tv_pay_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="支付内容"
                android:textColor="#5d5d5d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_pay_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="需支付："
                android:textColor="#5d5d5d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_pay_have"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="余额:"
                android:textColor="#5d5d5d"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <com.xr.ruidementality.widget.TextViewWithBg
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#555"
                app:tv_bg_color="@android:color/transparent"
                app:tv_bg_stroke_color="#555"
                app:tv_corner_radius="5dp"
                app:tv_stroke_width="1dp" />

            <com.xr.ruidementality.widget.TextViewWithBg
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/default_color_theme"
                app:tv_bg_color="@android:color/transparent"
                app:tv_bg_stroke_color="@color/default_color_theme"
                app:tv_corner_radius="5dp"
                app:tv_stroke_width="1dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/rd_right_top_delete_dot" />
</RelativeLayout>
