<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_default_white_gray"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="15dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cd"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginRight="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="33dp"
        app:cardElevation="3dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_cover"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@mipmap/rd_default_logo_rect"
            app:riv_corner_radius="60dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center|center_vertical"
            android:src="@mipmap/rd_search_audio_play" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/cd"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="hello"
        android:textColor="#555555"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cd"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/cd"
        android:drawableLeft="@mipmap/rd_icon_small_time"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="0'0"
        android:textColor="#727272"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/tv_time"
        android:layout_toRightOf="@+id/cd"
        android:background="@color/default_divider_line" />

</RelativeLayout>