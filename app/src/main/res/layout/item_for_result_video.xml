<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/selector_default_white_gray"
    android:clickable="true"
    android:padding="15dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cd"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/rd_default_logo_rect" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center|center_vertical"
            android:src="@mipmap/rd_search_audio_play" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cd"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="hello"
        android:textColor="#555555"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cd"
        android:layout_toRightOf="@+id/cd"
        android:drawableLeft="@mipmap/rd_icon_small_time"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="0'0"
        android:textColor="#727272"
        android:textSize="12sp" />


</RelativeLayout>