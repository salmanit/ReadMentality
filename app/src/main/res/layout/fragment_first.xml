<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_toolbar_color"
    android:clickable="true"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/layout_toolbar"
        android:orientation="vertical"
        android:background="@color/default_color_toolbar_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/default_color_toolbar_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="10dp"
                android:text="直播" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:marqueeRepeatLimit="-1"
                android:singleLine="true"
                android:text="瑞得心理"
                android:textColor="@color/default_title_color"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="15dp"
                android:src="@mipmap/rd_icon_search" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/default_divider_line" />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>


    <include layout="@layout/fragment_base_refresh" />
</LinearLayout>