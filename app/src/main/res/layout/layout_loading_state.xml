<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_f4"
    android:gravity="center_horizontal"
    android:orientation="vertical">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_f4"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.xr.ruidementality.widget.GifView
        android:id="@+id/state_gif"
        android:layout_width="125dp"
        android:layout_height="150dp"
        android:visibility="gone"
        app:gif="@raw/rd_default_loading"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_state"
        android:layout_width="135dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:textColor="#555555"
        android:textSize="14sp" />

    <com.xr.ruidementality.widget.TextViewWithBg
        android:id="@+id/tv_reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:text="重新加载"
        android:textColor="#555555"
        android:textSize="12sp"
        android:visibility="gone"
        app:tv_bg_color="#fff"
        app:tv_bg_stroke_color="#d8d8d8"
        app:tv_corner_radius="15dp"
        app:tv_stroke_width="1dp"
        tools:visibility="visible" />
</LinearLayout>
</LinearLayout>