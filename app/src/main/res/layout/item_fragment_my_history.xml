<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/selector_default_white_gray"
    android:paddingRight="15dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cd_cover"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_his_pic"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@mipmap/rd_default_logo_rect"
            app:riv_corner_radius="2dp"
            app:riv_oval="false" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_audio_title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cd_cover"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="音频标题"
        android:textColor="#727272"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cd_cover"
        android:layout_toRightOf="@+id/cd_cover"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="专辑标题"
        android:textColor="#555"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_last_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/cd_cover"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/cd_cover"
        android:drawablePadding="3dp"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="上次播放位置"
        android:textColor="#727272"
        android:textSize="12sp" />
</RelativeLayout>