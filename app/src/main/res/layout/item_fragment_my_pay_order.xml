<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_default_white_gray"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_recharge_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="支付宝支付"
        android:textColor="#3d3d3d"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_recharge_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_recharge_type"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="2016-11-21 12:00:07"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="成功"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_recharge_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_state"
        android:layout_marginTop="10dp"
        android:text="0.00瑞点" />
</RelativeLayout>