<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_f4"
    android:orientation="vertical">

    <com.xr.ruidementality.widget.TextViewWithBg
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="账号登陆"
        android:visibility="gone"
        android:textColor="#fff"
        android:textSize="15sp"
        app:tv_bg_color="@color/default_color_theme"
        app:tv_bg_stroke_color="#00000000"
        app:tv_corner_radius="4dp" />
    <com.xr.ruidementality.widget.TextViewWithBg
        android:id="@+id/tv_login222"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="账号登陆测"
        android:textColor="#fff"
        android:textSize="15sp"
        android:background="#ff00ff"
        app:tv_bg_color="@color/default_color_theme"
        app:tv_bg_stroke_color="#00000000"
        app:tv_corner_radius="4dp" />

    <com.xr.ruidementality.widget.TextViewWithBg
        android:id="@+id/tv_login_out"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="退出当前账号"
        android:textColor="#fff"
        android:textSize="15sp"
        app:tv_bg_color="#c7c7c7"
        app:tv_bg_stroke_color="#00000000"
        app:tv_corner_radius="4dp" />
</LinearLayout>