<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TextViewWithBg">
        <attr name="tv_bg_color" format="color" />
        <attr name="tv_bg_stroke_color" format="color" />
        <attr name="tv_stroke_width" format="dimension" />
        <attr name="tv_corner_radius" format="dimension" />
    </declare-styleable>


    <declare-styleable name="ViewPagerIndicator">
        <!-- Style of the circle indicator. -->
        <attr name="vpiCirclePageIndicatorStyle" format="reference" />
        <!-- Style of the icon indicator's views. -->
        <attr name="vpiIconPageIndicatorStyle" format="reference" />
        <!-- Style of the line indicator. -->
        <attr name="vpiLinePageIndicatorStyle" format="reference" />
        <!-- Style of the title indicator. -->
        <attr name="vpiTitlePageIndicatorStyle" format="reference" />
        <!-- Style of the tab indicator's tabs. -->
        <attr name="vpiTabPageIndicatorStyle" format="reference" />
        <!-- Style of the underline indicator. -->
        <attr name="vpiUnderlinePageIndicatorStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="CirclePageIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="cpi_centered" format="boolean" />
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="cpi_fill_color_checked" format="color" />
        <!-- Color of the filled circles that represents pages. -->
        <attr name="cpi_fill_color_normal" format="color" />
        <!-- Orientation of the indicator. -->
        <!--<attr name="android:orientation" format="integer"/>-->
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="cpi_radius" format="dimension" />
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="cpi_snap" format="boolean" />
        <!-- Color of the open circles. -->
        <attr name="cpi_strokeColor" format="color" />
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="cpi_strokeWidth" format="dimension"/>
        <!-- View background -->
        <!--<attr name="android:background" format="integer"/>-->
    </declare-styleable>
    <bool name="default_circle_indicator_centered">true</bool>
    <color name="default_circle_indicator_fill_color_checked">#FFFFFFFF</color>
    <color name="default_circle_indicator_fill_color_normal">#00f4f4f4</color>
    <integer name="default_circle_indicator_orientation">0</integer>
    <dimen name="default_circle_indicator_radius">3dp</dimen>
    <bool name="default_circle_indicator_snap">false</bool>
    <color name="default_circle_indicator_stroke_color">#FFDDDDDD</color>
    <dimen name="default_circle_indicator_stroke_width">1dp</dimen>


    <declare-styleable name="SimpleGifView">
        <attr name="gv_pic_res_id" format="reference" />
        <attr name="gv_paused" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>
</resources>