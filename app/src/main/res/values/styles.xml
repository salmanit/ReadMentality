<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
    </style>


    <style name="DiaScaleAnimationTheme" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/DiaScaleAnimation</item>
    </style>
    <style name="DiaScaleAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/enter_scale0to1</item>
        <item name="android:windowExitAnimation">@anim/enter_scale1to0</item>
    </style>

    <style name="TabLayoutLoginTextStyle">
        <item name="android:textSize">16dp</item>
    </style>
</resources>
